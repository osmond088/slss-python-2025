import random

import pygame

# COLOURS - (R, G, B)
# CONSTANTS ALL HAVE CAPS FOR THEIR NAMES
WHITE = (255, 255, 255)
BLACK = (  0,   0,   0)
RED   = (255,   0,   0)
GREEN = (  0, 255,   0)
BLUE  = (  0,   0, 255)
GREY  = (128, 128, 128)
YELLOW = (255, 255,   0)

class Block(pygame.sprite.Sprite):
    def __init__(self):
        """A blue block worth 1 point"""
        super().__init__()

        self.image = pygame.Surface((20, 15))
        # change the colour of our image to blue
        self.image.fill(BLUE)

        # rect represents the hitbox of our sprite
        # the hitbox gives information about:
        #    - location of the sprite x, y
        #    - the size of the sprite width, height
        self.rect = self.image.get_rect()
        # change the location of our hitbox
        self.rect.centerx = 100
        self.rect.centery = 100

        # Points value
        self.points = 1

class GoldenBlock(pygame.sprite.Sprite):
    def __init__(self):
        """A golden block worth more points"""
        super().__init__()

        self.image = pygame.Surface((25, 20))
        # change the colour of our image to yellow/gold
        self.image.fill(YELLOW)

        self.rect = self.image.get_rect()
        self.rect.centerx = 100
        self.rect.centery = 100

        # Points value - worth more!
        self.points = 5

class MovingBlock(pygame.sprite.Sprite):
    def __init__(self):
        """A green block that moves around"""
        super().__init__()

        self.image = pygame.Surface((20, 15))
        # change the colour of our image to green
        self.image.fill(GREEN)

        self.rect = self.image.get_rect()
        self.rect.centerx = 100
        self.rect.centery = 100

        # Velocity for movement
        self.vel_x = random.choice([-2, -1, 1, 2])
        self.vel_y = random.choice([-2, -1, 1, 2])

        # Points value
        self.points = 3

    def update(self):
        """Move the block"""
        self.rect.x += self.vel_x
        self.rect.y += self.vel_y

class Mario(pygame.sprite.Sprite):
    def __init__(self):
        """Player sprite"""
        super().__init__()

        # Two copies of image: right-facing and left-facing
        self.image_right = pygame.image.load("assets/mario-snes.png")
        self.image_right = pygame.transform.scale_by(self.image_right, 0.5)
        self.image_left = pygame.transform.flip(self.image_right, True, False)
        self.image = self.image_right

        self.rect = self.image.get_rect()

        # Keep track of last x-coord
        self.last_x = 0

        # Mario's "Life"
        self.health = 100

    def decrease_health(self, mag: int) -> int:
        """Decrease player's health by magnitude.
        Returns:
            current health that Mario has after the change
        """
        self.health -= mag
        return self.health

    def update(self):
        """Have Mario follow the mouse.
        Set the "right" Mario image based on where he's facing."""
        self.rect.center = pygame.mouse.get_pos()

        # Mario faces right if and only if the previous x
        # is less than the current x
        if self.last_x < self.rect.x:
            self.image = self.image_right
        elif self.last_x > self.rect.x:
            self.image = self.image_left

        # Update the last_x
        self.last_x = self.rect.x

class Enemy(pygame.sprite.Sprite):
    def __init__(self):
        super().__init__()

        self.image = pygame.image.load("assets/goomba-nes.png")
        self.rect = self.image.get_rect()
        # No initial location -> (0, 0)

        # Velocity of the Enemy
        self.vel_x = 0
        self.vel_y = 0

    def update(self):
        # movement in the x- and y-axis
        self.rect.x += self.vel_x
        self.rect.y += self.vel_y

class Bowser(pygame.sprite.Sprite):
    def __init__(self):
        super().__init__()

        self.image = pygame.image.load("assets/bowser.png")
        # Here I used AI to scale down Bowser
        self.image = pygame.transform.scale_by(self.image, 0.15)
        self.rect = self.image.get_rect()
        # No initial location -> (0, 0)

        # Velocity of Bowser
        self.vel_x = 0
        self.vel_y = 0

    def update(self):
        # movement in the x- and y-axis
        self.rect.x += self.vel_x
        self.rect.y += self.vel_y
        # TODO: randomize movement

def game():
    pygame.init()

    # CONSTANTS
    WIDTH = 800
    HEIGHT = 600
    SIZE = (WIDTH, HEIGHT)

    # Creating the Screen
    screen = pygame.display.set_mode(SIZE)
    pygame.display.set_caption("Collect Blocks")

    # Font for text
    font = pygame.font.Font(None, 36)

    # Variables
    done = False
    clock = pygame.time.Clock()
    score = 0

    # Create a sprite group
    all_sprites_group = pygame.sprite.Group()
    block_sprites_group = pygame.sprite.Group()
    enemy_sprites_group = pygame.sprite.Group()

    # Create player sprite
    player = Mario()
    # Place Mario in the middle of the screen
    player.rect.centerx = WIDTH / 2
    player.rect.centery = HEIGHT / 2
    all_sprites_group.add(player)

    # Create 3 enemies to start
    for _ in range(3):
        enemy_one = Enemy()
        # Randomize position at bottom-left
        random_x = random.randrange(20, 100)
        random_y = random.randrange(HEIGHT-100, HEIGHT-20)
        enemy_one.rect.center = random_x, random_y
        # Randomize velocity
        enemy_one.vel_x = random.choice([-3, -2, -1, 1, 2, 3])
        enemy_one.vel_y = random.choice([-3, -2, -1, 1, 2, 3])

        all_sprites_group.add(enemy_one)
        enemy_sprites_group.add(enemy_one)

    bowser = Bowser()
    # Randomize position at bottom-left
    random_x = random.randrange(20, 100)
    random_y = random.randrange(HEIGHT-100, HEIGHT-20)
    bowser.rect.center = random_x, random_y
    # Randomize velocity
    bowser.vel_x = random.choice([-3, -2, -1, 1, 2, 3])
    bowser.vel_y = random.choice([-3, -2, -1, 1, 2, 3])

    all_sprites_group.add(bowser)
    enemy_sprites_group.add(bowser)

    # Create 80 regular blocks
    for _ in range(80):
        block = Block()
        # randomize their location
        block.rect.centerx = random.randrange(0, WIDTH)
        block.rect.centery = random.randrange(0, HEIGHT)
        # add them to the sprite group
        all_sprites_group.add(block)
        block_sprites_group.add(block)

    # Create 10 golden blocks
    for _ in range(10):
        golden_block = GoldenBlock()
        # randomize their location
        golden_block.rect.centerx = random.randrange(0, WIDTH)
        golden_block.rect.centery = random.randrange(0, HEIGHT)
        # add them to the sprite group
        all_sprites_group.add(golden_block)
        block_sprites_group.add(golden_block)

    # Create 10 moving blocks
    for _ in range(10):
        moving_block = MovingBlock()
        # randomize their location
        moving_block.rect.centerx = random.randrange(0, WIDTH)
        moving_block.rect.centery = random.randrange(0, HEIGHT)
        # add them to the sprite group
        all_sprites_group.add(moving_block)
        block_sprites_group.add(moving_block)


    # ------------ MAIN GAME LOOP
    while not done:
        # ------ MAIN EVENT LISTENER
        # when the user does something
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                done = True

        # ------ GAME LOGIC
        all_sprites_group.update()

        # Keep the enemies inside the screen
        for enemy in enemy_sprites_group:
            # x-axis and y-axis bounce
            if enemy.rect.left < 0 or enemy.rect.right > WIDTH:
                enemy.vel_x = -enemy.vel_x
            if enemy.rect.top < 0 or enemy.rect.bottom > HEIGHT:
                enemy.vel_y = -enemy.vel_y

        # Keep the moving blocks inside the screen
        for sprite in block_sprites_group:
            if isinstance(sprite, MovingBlock):
                # x-axis and y-axis bounce
                if sprite.rect.left < 0 or sprite.rect.right > WIDTH:
                    sprite.vel_x = -sprite.vel_x
                if sprite.rect.top < 0 or sprite.rect.bottom > HEIGHT:
                    sprite.vel_y = -sprite.vel_y

        # Check if Mario collides with a block
        blocks_collided = pygame.sprite.spritecollide(player, block_sprites_group, True)
        for block in blocks_collided:
            # Add points based on block type
            score += block.points
            print(f"Block collected! Score: {score}")

        # Mario collides with enemy
        enemies_collided = pygame.sprite.spritecollide(player, enemy_sprites_group, False)
        for enemy in enemies_collided:
            # Bowser does more damage than regular enemies
            if isinstance(enemy, Bowser):
                current_health = player.decrease_health(5)
                print(f"Bowser hit! Health: {current_health}")
            else:
                current_health = player.decrease_health(1)
                print(f"Enemy hit! Health: {current_health}")

            # Check if Mario's health is 0 or less
            if player.health <= 0:
                print("Game Over!")
                done = True

        # ------ DRAWING TO SCREEN
        screen.fill(WHITE)
        all_sprites_group.draw(screen)
        score_text = font.render(f"Score: {score}", True, BLACK)
        screen.blit(score_text, (10, 10))
        health_text = font.render(f"Health: {player.health}", True, BLACK)
        screen.blit(health_text, (10, 50))

        # Check if player won (collected all blocks)
        if len(block_sprites_group) == 0:
            win_text = font.render("YOU WIN!", True, GREEN)
            screen.blit(win_text, (WIDTH/2 - 80, HEIGHT/2))

        # Check if player lost
        if player.health <= 0:
            lose_text = font.render("GAME OVER!", True, RED)
            screen.blit(lose_text, (WIDTH/2 - 100, HEIGHT/2))

        # Update screen
        pygame.display.flip()

        # ------ CLOCK TICK
        clock.tick(60) # 60 fps

    pygame.quit()

if __name__ == "__main__":
    game()
